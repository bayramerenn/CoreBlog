@model Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız soyadınız</label>

                            <input class="form-control" id="validationDefault01" asp-for="WriterName">
                            <span asp-validation-for="WriterName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail Adresi</label>
                            <input class="form-control"  asp-for="WriterMail">
                            <span asp-validation-for="WriterMail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            <input type="password" class="form-control" id="password1" asp-for="WriterPassword">
                            <span asp-validation-for="WriterPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
                            <input type="text" class="form-control" id="password2" name="WriterImage" placeholder="">
                            <span asp-validation-for="WriterImage" class="text-danger"></span>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum kabul ediyorum</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
    <br />

</section>

@section Scripts {
    <script src="~/sweetalert/sweetalert.min.js"></script>
    <script>
        $('#btn1').click(function () {
            swal("Site Kullanım Şartları","Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları spam ölçüsünde varmadan gönderilmeye devam edecektir.");
        });
    </script>
  
}

